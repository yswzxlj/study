<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%boldRed(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %highlight(%level |) %msg | %X{type}\n\tat %boldMagenta(%class).%boldCyan(%method) \(%file:%line\) \)\n\</pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="consoleLog" />
    </root>
    
</configuration>

